<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="90" 
                android:centerColor="@color/white_color" 
                android:endColor="@color/white_color" 
                android:startColor="@color/white_color" />
            <stroke android:width="1dp" android:color="@color/filter_green_color" />
            <corners android:radius="10px" />
        </shape>
    </item>
    
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="90" 
                android:centerColor="@color/white_color" 
                android:endColor="@color/white_color" 
                android:startColor="@color/white_color" />
            <stroke android:width="1dp" android:color="@color/filter_gray_color" />
            <corners android:radius="10px" />
        </shape>
    </item>

</selector>