<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/visitResultContainer"
    android:layout_width="match_parent"
    android:layout_height="105dp" >

    <ImageView
        android:id="@+id/thumbImageView"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/placeholder_photo" />

    <TextView
        android:id="@+id/hintTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/thumbImageView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/track_visit_no_record"
        android:textColor="@color/track_hint_color" />

</RelativeLayout>